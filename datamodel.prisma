type Schedule { # Each record of this type is one single time a user has scheduled a workout/s.
	id: ID! @unique
	time: String!
	workouts: [Workout!]!
	completed: Boolean @default(value: false) # User may or may not want to track which Workouts they attend.
}

type Workout { # A workout that is named, and has exercises under it.
	id: ID! @unique
	name: String!
	exercises: [Exercise!]!
	completed: Boolean @default(value: false)
}

type SavedWorkout { # This is a workout the user has saved, so they can easily add it to any day instead of having to create it over and over.
	id: ID! @unique
	workout: Workout!
	exercises: [Exercise!]!
}

type Exercise { # One exercise.
	id: ID! @unique
	name: String!
	sets: Int
	reps: Int
	intervals: Int
	duration: Int
	intensity: Int
	completed: Boolean @default(value: false) # Users can track which exercises and workouts that are completed.
}

type User { # User model.
	id: ID! @unique
	schedules: [Schedule!]!
	savedWorkouts: [SavedWorkout!]!
	notes: [Note!]!
	bodyMetrics: [BodyMetric!]!
	bodyMeasurements: [BodyMeasurement!]!
	googleId: String! @unique
}

type Note { # A user can write a note about a single scheduled workout time, or a workout.
	id: ID! @unique
	note: String!
	workout: Workout
	createdBy: User!
	schedule: Schedule
}

type BodyMetric {
	id: ID! @unique
	time: String! #Track what time this is recorded, so overtime a user can track their progression.
	weight: Float
	height: Float
	bodyfat: Float #User could enter a number representing the % of body fat.
}

type BodyMeasurement {
	id: ID! @unique
	time: String! #Track what time this is recorded, so overtime a user can track their progression.
	hips: Float
	waist: Float
	rightArm: Float
	leftArm: Float
	rightLeg: Float
	leftLeg: Float
}

type Schedule {
  id: ID! @unique
  time: DateTime!
  user: User!
}

type SavedWorkout {
  id: ID! @unique
}

type Workout {
  id: ID! @unique
  name: String!
  schedule: Schedule!
}

